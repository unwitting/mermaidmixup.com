---
import StandardHead from '../components/StandardHead.astro';

const {title} = Astro.props
---
<style lang="scss">
.main {
  position: relative;
  width: 100%;
  height: 100vh;
}

.backing {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
</style>

<html lang="en">
  <head>
    <StandardHead title={title} />
  </head>
  <body>
    <main class="main">
      <img
        class="backing"
        src="https://images.unsplash.com/photo-1602101319087-18d00e6109c0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1275&q=80"
      />
      <div class="overlay">
        <slot />
      </div>
    </main>
  </body>
</html>
